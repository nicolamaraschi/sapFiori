<mvc:View
    controllerName="project1.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page
        title="Dettaglio Ordini"
        showNavButton="true"
        navButtonPress=".onNavBack">
        <content>
            <Table
                id="orderDetailsTable"
                inset="false"
                items="{/Order_Details}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Ordini per questo prodotto" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Order ID" /></Column>
                    <Column hAlign="End"><Text text="Unit Price" /></Column>
                    <Column hAlign="End"><Text text="Quantity" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{OrderID}" />
                            <ObjectNumber
                                number="{
                                    parts: [{path: 'UnitPrice'}],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {showMeasure: false}
                                }"
                                unit="USD"/>
                            <ObjectNumber number="{Quantity}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>